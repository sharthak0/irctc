pipeline { 
  agent any 
  environment {
   PATH = "/opt/maven/bin:$PATH"
  } 
  stages { 

      stage ('build') { 
        steps {
           sh 'mvn clean deploy' 
        }
         
      } 
    
       stage ('SonarQube analysis') {
           environment {
                scannerHome = tool 'Test-SonarQube Scanner'
  
           }    
            steps { 
               withSonarQbeEnv( 'test-SonarQube-server') {  
                                         
                    sh '${scannerhome}/bin/sonar-scanner'   

                }  
            } 
       }    
    
  } 
}

